<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Title>Dotnet Lightweight Resource Server</Title>
    <Version>0.1.0-alpha</Version>
    <Authors>WithLithum</Authors>
    <Description>A lightweight resource server design for special use purposes such as serving skin resource for CustomNPCs</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="INIParser" Version="1.0.0" />
    <PackageReference Include="log4net" Version="2.0.15" />
  </ItemGroup>

  <ItemGroup>
    <None Update="DLRS.ini">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
